<resources>
    <!-- Base application theme. -->
    <style name="Theme.RacketSelectorApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground">@color/light_grey</item>
        <item name="android:navigationBarColor">@color/light_grey</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="button">
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="inputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="hintTextColor">@color/yellow</item>
        <item name="boxStrokeColor">@color/yellow</item>
    </style>
</resources>